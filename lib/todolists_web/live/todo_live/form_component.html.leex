<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "todo-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <%= label f, :list_id %>
  <%= text_input f, :list_id %>
  <%= error_tag f, :list_id %>

  <%= label f, :text %>
  <%= text_input f, :text %>
  <%= error_tag f, :text %>

  <%= label f, :done %>
  <%= checkbox f, :done %>
  <%= error_tag f, :done %>

  <%= submit "Save", phx_disable_with: "Saving..." %>
</form>
